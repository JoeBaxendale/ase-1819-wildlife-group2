<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchLayout"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/yih"
            android:adjustViewBounds="true"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
            android:layout_below="@+id/imageView"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/switchLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual or Automatic Location"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:text="Automatic"
            />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/textView5"
            android:text="Switch" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/switch1"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Location"
            android:layout_below="@+id/switch1"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        >


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_below="@+id/textView13"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noun: "

            />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/textView7"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scientific Noun: "
            android:layout_below="@+id/textView7"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text=""
            android:layout_toRightOf="@+id/textView14"
            android:layout_below="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Length: "
            android:layout_below="@+id/textView14"
            />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-6dp"
            android:background="@android:color/transparent"
            android:padding="2dp"
            android:layout_toRightOf="@+id/textView8"
            android:layout_below="@+id/textView16"
            android:hint="Insert Body Length"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wingspan: "
            android:layout_below="@+id/textView8"
            />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText1"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-3dp"
            android:layout_toRightOf="@+id/textView9"
            android:background="@android:color/transparent"
            android:hint="Insert Wingspan"
            android:padding="2dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colour: "
            android:layout_below="@+id/textView9"
            />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText2"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-3dp"
            android:layout_toRightOf="@+id/textView10"
            android:background="@android:color/transparent"
            android:hint="Insert Colour"
            android:padding="2dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habitat: "
            android:layout_below="@+id/textView10"
            />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText3"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-3dp"
            android:layout_toRightOf="@+id/textView12"
            android:background="@android:color/transparent"
            android:hint="Insert Habitat"
            android:padding="2dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of Year: "
            android:layout_below="@+id/textView12"
            />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText4"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-3dp"
            android:layout_toRightOf="@+id/textView13"
            android:background="@android:color/transparent"
            android:hint="Insert Time of Year"
            android:padding="2dp"
            android:textSize="14dp" />


    </RelativeLayout>

</RelativeLayout>